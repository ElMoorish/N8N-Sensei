# N8N-Sensei Production Environment Configuration
# Copy this file to .env.production and update the values

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
DB_PASSWORD=your-secure-database-password
REDIS_PASSWORD=your-secure-redis-password

# N8N Configuration
N8N_USER=admin
N8N_PASSWORD=your-secure-n8n-password
N8N_DB_PASSWORD=your-secure-n8n-db-password

# SSL/TLS Configuration
ACME_EMAIL=your-email@yourdomain.com
TRAEFIK_AUTH=admin:$2y$10$your-hashed-password-here

# Monitoring
GRAFANA_PASSWORD=your-secure-grafana-password

# AI Provider API Keys (Optional)
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
OPENROUTER_API_KEY=sk-or-your-openrouter-api-key

# Local AI Configuration
LLAMA_HOST=localhost
LLAMA_PORT=11434
LM_STUDIO_HOST=localhost
LM_STUDIO_PORT=1234
OLLAMA_HOST=localhost
OLLAMA_PORT=11434

# Application Settings
ENVIRONMENT=production
LOG_LEVEL=INFO
DEBUG=false

# SaaS Configuration (if enabled)
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# Rate Limiting
API_RATE_LIMIT_PER_HOUR=1000
AI_RATE_LIMIT_PER_HOUR=100

# CORS Origins (comma-separated)
CORS_ORIGINS=https://yourdomain.com,https://api.yourdomain.com,https://n8n.yourdomain.com